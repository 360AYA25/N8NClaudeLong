{
  "name": "n8n-claude-only",
  "version": "1.0.0",
  "description": "MCP server for n8n workflow automation integration with AI assistants",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "n8n-claude": "./dist/src/mcp/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/src/index.js",
    "start:http": "node dist/src/http-server.js",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "vitest run --dir tests/e2e",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "n8n",
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "automation",
    "workflow"
  ],
  "author": "Sergey",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "better-sqlite3": "^11.0.0",
    "express": "^5.1.0",
    "n8n": "^2.0.0",
    "n8n-core": "^2.0.0",
    "n8n-workflow": "^2.0.0",
    "openai": "^4.77.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
